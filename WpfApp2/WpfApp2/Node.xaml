<UserControl x:Class="WpfApp2.Node"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp2"
             mc:Ignorable="d" Height="192" Width="540.5">
    <UserControl.Effect>
        <DropShadowEffect BlurRadius="10" Opacity="0.5" Direction="357"/>
    </UserControl.Effect>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="216*"/>
            <ColumnDefinition Width="325*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" Background="#FF208537">
            <TextBlock x:Name="txtBox1" TextWrapping="Wrap"><Run Text="This is a test this is a test this is a test this is a test"/><LineBreak/><Run/></TextBlock>
        </StackPanel>
        <StackPanel Grid.Column="0" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}">
            <TextBlock x:Name="txtBox2" TextWrapping="Wrap" Text="TextBlock"/>

        </StackPanel>
    </Grid>
</UserControl>
